{
  "name": "verse/run",
  "description": "Php framework that provide easy way to create php micro-services",
  "keywords": ["framework", "microservices", "microservice"],
  "homepage": "http://github.com/vetermanve/verse_run/",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Mikhail Denisov",
      "email": "manwebdev@gmail.com"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/vetermanve/verse_router"
    }
  ],
  "require": {
    "php": "^7.0",
    "verse/router" : "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7"
  },
  "suggest": {
    "ext-amqp": "Allow receiving http requests from AMQP server (1.0+ required)"
  },
  "autoload": {
    "psr-4": {"Verse\\Run\\": "src/Verse/Run"}
  },
  "autoload-dev": {
    "psr-4": {"Verse\\Run\\": "tests/Verse/Run"}
  },
  "scripts": {
    "test": [
      "parallel-lint . --exclude vendor",
      "phpunit"
    ]
  }
}
